<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7c7c7"
    tools:context="net.ordesk.ordesk_vivino.membership_screen"
    android:id="@+id/membership_screen_frameLayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout android:layout_height="match_parent"
        android:background="#ff000000"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent"
        android:id="@+id/info_and_add">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/kg0logo"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_width="220dp"
            android:paddingTop="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="225dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="100dp"
                android:visibility="invisible">

                <TextView
                    android:text="לבחירת פריטים מהתפריט לחצו על "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cartokbtn"
                    android:id="@+id/imageView3" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:text="Advertise Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="535dp"
            android:textSize="26sp"
            android:layout_marginStart="35dp" />

        <ViewFlipper
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:autoStart="true"
            android:animateFirstView="true"
            android:clickable="true"
            android:layout_width="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pire0balls" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0dag0metugan" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0netah0file" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0teramisu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pene0salmon" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0carpatcho" />

        </ViewFlipper>

    </FrameLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_width="780dp"
        android:weightSum="1"
        android:id="@+id/nav_bar"
        android:layout_height="55dp">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:padding="7dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/infobtn" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/member_info_button"
                android:background="#00000000"
                android:padding="2dp" />

        </FrameLayout>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/feedbackbtn"
            android:id="@+id/member_feedback_button"
            android:paddingStart="10dp"
            android:tag="call_waiter" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mischakimbtn"
            android:id="@+id/member_play_button"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/memberspushbtn"
            android:id="@+id/info_members_button"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true"
            android:visibility="visible" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/member_menu_button"
            app:srcCompat="@drawable/tafritbtn"
            android:soundEffectsEnabled="true" />

    </LinearLayout>

    <FrameLayout android:layout_height="match_parent"
        android:layout_width="780dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/kg0page0background">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:id="@+id/member_btns_fl"
            android:visibility="invisible">

            <Button
                android:text="כניסת חבר מועדון קיים"
                android:layout_width="185dp"
                android:layout_height="117dp"
                android:id="@+id/existing_member_btn"
                android:textSize="20sp"
                android:layout_marginStart="137dp" />

            <Button
                android:text="רישום חבר מועדון חדש"
                android:layout_width="185dp"
                android:layout_height="117dp"
                android:id="@+id/new_member_btn"
                android:textSize="20sp"
                android:layout_marginStart="459dp" />
        </FrameLayout>

        <TextView
            android:text="מועדון חברים"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:id="@+id/textView3"
            android:textSize="60sp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="35dp"
            android:layout_width="440dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/new_member_reg_fl"
            android:layout_marginTop="40dp"
            android:visibility="visible">

            <Button
                android:text="הירשם"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up_ok"
                android:textSize="17sp"
                android:layout_width="90dp"
                android:layout_marginStart="345dp"
                android:layout_marginTop="390dp" />

            <Button
                android:text="חזרה"
                android:layout_height="wrap_content"
                android:id="@+id/sign_up_back"
                android:textSize="17sp"
                android:layout_width="90dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="390dp" />

            <TextView
                android:text="שם פרטי"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="630dp"
                android:layout_marginTop="180dp" />

            <TextView
                android:text="טופס הרשמה לחבר מועדון חדש"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView9"
                android:textColor="#ff000000"
                android:textSize="24sp"
                android:layout_marginStart="360dp"
                android:layout_marginTop="120dp" />

            <TextView
                android:text="כתובת מייל"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView22"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="610dp"
                android:layout_marginTop="300dp" />

            <TextView
                android:text="שם משפחה"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="396dp"
                android:layout_marginTop="180dp" />

            <TextView
                android:text="טלפון"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView12"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="223dp"
                android:layout_marginTop="180dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_private_name"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="563dp"
                android:layout_width="140dp"
                android:layout_marginTop="210dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_eMail"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="355dp"
                android:layout_width="348dp"
                android:layout_marginTop="330dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName|phone"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_private_phone"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="130dp"
                android:layout_width="140dp"
                android:layout_marginTop="210dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName|phone"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_IDnum"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="130dp"
                android:layout_width="140dp"
                android:layout_marginTop="330dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_family_name"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="355dp"
                android:layout_width="140dp"
                android:layout_marginTop="210dp" />

            <TextView
                android:text="מס' זהות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="197dp"
                android:layout_marginTop="300dp" />
        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/exist_member_reg_fl"
            android:layout_marginTop="40dp"
            android:visibility="invisible">

            <Button
                android:layout_height="wrap_content"
                android:text="חזרה"
                android:id="@+id/exist_member_back_btn"
                android:textSize="17sp"
                android:layout_marginStart="243dp"
                android:layout_width="100dp"
                android:layout_marginTop="310dp" />

            <Button
                android:layout_height="wrap_content"
                android:text="הירשם"
                android:id="@+id/exist_member_reg_btn"
                android:textSize="17sp"
                android:layout_marginStart="436dp"
                android:layout_width="100dp"
                android:layout_marginTop="310dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName|phone"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_exist_phone"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="190dp"
                android:layout_width="140dp"
                android:layout_marginTop="210dp"/>

            <EditText
                android:layout_height="wrap_content"
                android:inputType="textPersonName|phone"
                android:text=""
                android:ems="10"
                android:id="@+id/editText_exist_IDnum"
                android:backgroundTintMode="src_in"
                android:background="#ffaaaaaa"
                android:backgroundTint="#ffffffff"
                android:padding="10dp"
                android:textSize="17sp"
                android:textColor="#ff000000"
                android:textAlignment="viewEnd"
                android:layout_marginStart="450dp"
                android:layout_width="140dp"
                android:layout_marginTop="210dp" />

            <TextView
                android:text="מס' זהות"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="520dp"
                android:layout_marginTop="180dp" />

            <TextView
                android:text="טלפון"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textColor="#ff000000"
                android:textSize="17sp"
                android:layout_marginStart="280dp"
                android:layout_marginTop="180dp"  />
        </FrameLayout>

    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
