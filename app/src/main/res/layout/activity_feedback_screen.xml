<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7c7c7"
    tools:context="net.ordesk.ordesk_vivino.feedback_screen"
    android:id="@+id/feedback_screen_frameLayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <FrameLayout android:layout_height="match_parent"
        android:layout_width="780dp"
        android:layout_marginTop="65dp">

        <TextView
            android:text="here we enter basic info about the application and how to use  it"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="25sp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="200dp" />

        <TextView
            android:text="INFO VIEW"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="60sp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="110dp" />
    </FrameLayout>

    <FrameLayout android:layout_height="match_parent"
        android:background="#ff000000"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent"
        android:id="@+id/info_and_add">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/kg0logo"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_width="220dp"
            android:paddingTop="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="225dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="100dp">

                <TextView
                    android:text="לבחירת פריטים מהתפריט לחצו על "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cartokbtn"
                    android:id="@+id/imageView3" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:text="Advertise Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="535dp"
            android:textSize="26sp"
            android:layout_marginStart="35dp" />

        <ViewFlipper
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:autoStart="true"
            android:animateFirstView="true"
            android:clickable="true"
            android:layout_width="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pire0balls" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0dag0metugan" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0netah0file" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0teramisu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pene0salmon" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0carpatcho" />

        </ViewFlipper>

    </FrameLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_width="780dp"
        android:weightSum="1"
        android:id="@+id/nav_bar"
        android:layout_height="55dp">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:padding="7dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/infobtn" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/feedback_info_button"
                android:background="#00000000"
                android:padding="2dp" />

        </FrameLayout>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/feedbackpushbtn"
            android:id="@+id/imgbunnouse"
            android:paddingStart="10dp"
            android:tag="call_waiter" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mischakimbtn"
            android:id="@+id/feedback_play_button"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/membersbtn"
            android:id="@+id/feedback_members_button"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true"
            android:visibility="visible" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/feedback_menu_button"
            app:srcCompat="@drawable/tafritbtn"
            android:soundEffectsEnabled="true" />

    </LinearLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
