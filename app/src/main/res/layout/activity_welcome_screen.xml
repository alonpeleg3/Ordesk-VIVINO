<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7c7c7"
    tools:context="net.ordesk.ordesk_vivino.welcome_screen"
    android:id="@+id/frameLayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="1009dp"
            app:srcCompat="@drawable/kg0welcome"
            android:id="@+id/imageView_vivinoblur"
            android:layout_height="650dp"
            android:layout_marginStart="-85dp"
            android:layout_marginTop="-30dp" />

        <TextView
            android:text="Touch To Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="450dp"
            android:layout_marginStart="250dp" />
    </FrameLayout>

    <Button
        android:background="#00ffffff"
        android:layout_width="821dp"
        android:layout_height="match_parent"
        android:id="@+id/start_order_button"
        android:textSize="30sp"
        android:textColor="#000000" />

    <FrameLayout android:layout_height="match_parent"
        android:background="#ff000000"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent"
        android:id="@+id/info_and_add">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/kg0logo"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_width="220dp"
            android:paddingTop="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="225dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="100dp"
                android:visibility="invisible">

                <TextView
                    android:text="לבחירת פריטים מהתפריט לחצו על "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cartokbtn"
                    android:id="@+id/imageView3" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:text="Advertise Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="535dp"
            android:textSize="26sp"
            android:layout_marginStart="35dp" />

        <ViewFlipper
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:autoStart="true"
            android:animateFirstView="true"
            android:clickable="true"
            android:layout_width="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pire0balls" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0dag0metugan" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0netah0file" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0teramisu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pene0salmon" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0carpatcho" />

        </ViewFlipper>

    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
