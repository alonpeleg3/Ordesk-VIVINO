<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="net.ordesk.ordesk_vivino.order_screen"
    android:id="@+id/pay_framelayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <FrameLayout android:layout_height="match_parent"
        android:background="#734f37"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/vivinologo"
            android:id="@+id/payimageView"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-30dp"
            android:layout_width="220dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            app:srcCompat="@drawable/goldstar"
            android:id="@+id/payimageView2"
            android:layout_marginTop="350dp" />

        <TextView
            android:text="Advertise Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paytextView"
            android:layout_marginTop="280dp"
            android:textSize="26sp"
            android:layout_marginStart="22dp" />
    </FrameLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_height="65dp"
        android:layout_width="781dp"
        android:weightSum="1">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:layout_width="50dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@android:drawable/ic_menu_info_details"
                android:id="@+id/imageView4" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton_back"
                android:background="#00000000" />

        </FrameLayout>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/pay_order_imageButton"
            app:srcCompat="@drawable/orderbtn"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/paybtnpush"
            android:id="@+id/payimageButton4"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/playbtn"
            android:id="@+id/payimageButton5"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/servicebtn"
            android:id="@+id/payimageButton2"
            android:paddingStart="10dp" />

        <ImageButton
            android:background="#000000"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cartbtn"
            android:id="@+id/payimageButton10"
            android:layout_width="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="-25dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="650dp"
        android:layout_height="364dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="95dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarDefaultDelayBeforeFade="10000"
        android:scrollbarSize="50dp">

        <TableLayout
            android:layout_height="wrap_content"
            android:id="@+id/order_tbl"
            android:layout_width="match_parent"
            android:stretchColumns="5"
            android:background="#FFf1f1f1" >

            <TableRow
                android:layout_width="650dp"
                android:layout_height="25dp"
                android:padding="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="25dp"
                    android:background="#393838">

                    <TextView
                        android:text="קופון"
                        android:textColor="#ffffffff"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="מחיר"
                        android:textColor="#ffffffff"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="תוספות"
                        android:textColor="#ffffffff"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="כמות"
                        android:textColor="#ffffffff"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="מנה"
                        android:textColor="#ffffffff"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="650dp"
                android:layout_height="25dp"
                android:padding="2dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="25dp"
                    android:background="#FF909090" >

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="650dp"
                android:layout_height="25dp"
                android:visibility="visible"
                android:padding="2dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="25dp"
                    android:background="#FF909090">

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="650dp"
                android:layout_height="25dp"
                android:visibility="visible"
                android:padding="2dp" >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="650dp"
                    android:layout_height="25dp"
                    android:background="#FF909090">

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="TextView"
                        android:textColor="#ff000000"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                </LinearLayout>

            </TableRow>
        </TableLayout>
    </ScrollView>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
