<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="net.ordesk.ordesk_vivino.order_screen"
    android:id="@+id/pay_framelayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <FrameLayout android:layout_height="match_parent"
        android:background="#734f37"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/vivinologo"
            android:id="@+id/payimageView"
            android:layout_marginStart="11dp"
            android:layout_marginTop="-30dp"
            android:layout_width="220dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="215dp"
            app:srcCompat="@drawable/goldstar"
            android:id="@+id/payimageView2"
            android:layout_marginTop="350dp" />

        <TextView
            android:text="Advertise Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/paytextView"
            android:layout_marginTop="280dp"
            android:textSize="26sp"
            android:layout_marginStart="22dp" />
    </FrameLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_height="65dp"
        android:layout_width="780dp"
        android:weightSum="1"
        android:id="@+id/nav_bar">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="60dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/infobtn" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton_back"
                android:background="#00000000" />

        </FrameLayout>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/meltzarbtn"
            android:id="@+id/imageButton2"
            android:paddingStart="10dp" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mischakimbtn"
            android:id="@+id/imageButton5"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hazmanapushbtn"
            android:id="@+id/order_pay_imageButton"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/menu_btn"
            app:srcCompat="@drawable/tafritbtn"
            android:soundEffectsEnabled="true" />

    </LinearLayout>

    <ScrollView
        android:layout_width="650dp"
        android:layout_height="364dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="95dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarDefaultDelayBeforeFade="10000"
        android:scrollbarSize="50dp">

        <TableLayout
            android:layout_height="wrap_content"
            android:id="@+id/order_tbl"
            android:layout_width="match_parent"
            android:stretchColumns="5"
            android:background="#FFf1f1f1" >

        </TableLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/no_order_message"
        android:layout_height="match_parent"
        android:layout_width="780dp"
        android:layout_marginTop="65dp"
        android:visibility="visible">

        <TextView
            android:text="להזמנת פריטים, עבור לתפריט ובחר פריטים"
            android:textColor="#000000"
            android:layout_width="385dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="25sp"
            android:layout_marginTop="190dp"
            android:layout_marginStart="200dp" />

        <TextView
            android:text="אין פריטים להזמנה"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="60sp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="110dp" />
    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
