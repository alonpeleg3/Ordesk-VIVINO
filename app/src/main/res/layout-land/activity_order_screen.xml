<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="net.ordesk.ordesk_vivino.order_screen"
    android:id="@+id/order_framelayout">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout android:layout_height="match_parent"
        android:background="#ff000000"
        android:layout_marginStart="780dp"
        android:layout_width="match_parent"
        android:id="@+id/info_and_add">

        <ImageView
            android:layout_height="214dp"
            app:srcCompat="@drawable/kg0logo"
            android:layout_marginStart="11dp"
            android:layout_marginTop="0dp"
            android:layout_width="220dp"
            android:paddingTop="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginTop="225dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:weightSum="1"
                android:layout_height="100dp">

                <TextView
                    android:text="לבחירת פריטים מהתפריט לחצו על "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/cartokbtn"
                    android:id="@+id/imageView3" />

            </LinearLayout>
        </FrameLayout>

        <TextView
            android:text="Advertise Here"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="535dp"
            android:textSize="26sp"
            android:layout_marginStart="35dp" />

        <ViewFlipper
            android:layout_height="match_parent"
            android:layout_marginTop="350dp"
            android:autoStart="true"
            android:animateFirstView="true"
            android:clickable="true"
            android:layout_width="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pire0balls" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0dag0metugan" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0netah0file" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0teramisu" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0pene0salmon" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="183dp"
                app:srcCompat="@drawable/kg0carpatcho" />

        </ViewFlipper>

    </FrameLayout>

    <LinearLayout
        android:background="#000000"
        android:layout_width="780dp"
        android:weightSum="1"
        android:id="@+id/nav_bar"
        android:layout_height="55dp">

        <FrameLayout
            android:layout_height="match_parent"
            android:layout_width="60dp"
            android:padding="7dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/infobtn" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageButton_back"
                android:background="#00000000"
                android:padding="2dp" />

        </FrameLayout>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/meltzarbtn"
            android:id="@+id/imageButton2"
            android:paddingStart="10dp"
            android:tag="call_waiter" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/mischakimbtn"
            android:id="@+id/imageButton5"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true" />

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hazmanabtn"
            android:id="@+id/order_pay_imageButton"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true"
            android:visibility="visible"/>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/hazmanabtn"
            android:id="@+id/club_member_reg"
            android:paddingStart="10dp"
            android:soundEffectsEnabled="true"
            android:visibility="gone"/>

        <ImageButton
            android:background="#000000"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageButton3"
            app:srcCompat="@drawable/tafritpushbtn"
            android:soundEffectsEnabled="true" />

    </LinearLayout>

    <ScrollView android:layout_height="wrap_content"
        android:layout_width="780dp"
        android:layout_marginTop="55dp"
        android:id="@+id/Menu"
        android:background="@drawable/kg0menu0background">


    </ScrollView>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
